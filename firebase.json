{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/login",
        "destination": "/login.html"
      },
      {
        "source": "/signup",
        "destination": "/signup.html"
      },
      {
        "source": "/dashboard",
        "destination": "/dashboard.html"
      },
      {
        "source": "/python-challenges",
        "destination": "/PythonChallenge.html"
      },
      {
        "source": "/python-challenges/**",
        "destination": "/PythonChallenge.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
